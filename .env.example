# Environment Configuration for AI Agent

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4-deployment
AZURE_OPENAI_MODEL=gpt-4

# Databricks Configuration (PAT Token-based)
DATABRICKS_WORKSPACE_URL=https://your-workspace.cloud.databricks.com
DATABRICKS_PAT_TOKEN=your-personal-access-token
DATABRICKS_CLUSTER_ID=optional-cluster-id

# Email Configuration
EMAIL_ENABLED=true
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Agent Configuration
LOG_LEVEL=INFO
MAX_RETRIES=3

# ==============================================================================
# EMAIL CONFIGURATION
# ==============================================================================
# For Gmail: Use app-specific password
# For others: Use appropriate SMTP credentials

SMTP_SERVER=smtp.gmail.com
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=xxxx xxxx xxxx xxxx

# ==============================================================================
# ERROR HANDLING (Optional - defaults will be used if not set)
# ==============================================================================

MAX_RETRY_ATTEMPTS=3
RETRY_WITH_PARAMS_ATTEMPTS=2

# ==============================================================================
# LOGGING (Optional)
# ==============================================================================

LOG_LEVEL=INFO
LOG_FILE=/tmp/databricks_agent.log
